<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1>{{{title}}}</h1>

      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <p class="alert alert-dismissible alert-warning"><strong>Внимание! Информация показана за последние четыре месяца, тех кто сам вносил
            свои объекты.</strong></p>
        </div>
      </div>

      <div class="modal fade" id="myModal">
        <div class="modal-dialog">
          <div class="modal-content">

            <div class="form-group">

              <form id="csvForm" class="form-horizontal admin" action="" method="post">
                <input type="hidden" name="_csrf" value="{{_csrfToken}}">

                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title">Настроить отображение колонок</h4>
                </div>

                <div class="modal-body">

                  <label class="checkbox-inline">
                    <input type="checkbox" name="price-cottages[section]" value="1" {{column.section}}> Категория
                  </label>

                  <label class="checkbox-inline">
                    <input type="checkbox" name="price-cottages[type]" value="1" {{column.type}}> Тип объяв.
                  </label>

                  <label class="checkbox-inline">
                    <input type="checkbox" name="price-cottages[city]" value="1" {{column.city}}> Город
                  </label>

                  <label class="checkbox-inline">
                    <input type="checkbox" name="price-cottages[street]" value="1" {{column.street}}> Улица
                  </label>

                  <label class="checkbox-inline">
                    <input type="checkbox" name="price-cottages[price]" value="1" {{column.price}}> Цена
                  </label>


                  <label class="checkbox-inline">
                    <input type="checkbox" name="price-cottages[area_house]" value="1" {{column.area_house}}> Площадь дома(м<sup><small>2</small></sup>)
                  </label>

                  <label class="checkbox-inline">
                    <input type="checkbox" name="price-cottages[area_land]" value="1" {{column.area_land}}> Площадь участка(соток)
                  </label>

                  <label class="checkbox-inline">
                    <input type="checkbox" name="price-cottages[storey]" value="1" {{column.storey}}> Этажей
                  </label>

                  <label class="checkbox-inline">
                    <input type="checkbox" name="price-cottages[material]" value="1" {{column.material}}> Материал стен
                  </label>

                  <label class="checkbox-inline">
                    <input type="checkbox" name="price-cottages[category_land]" value="1" {{column.category_land}}> Категория земель
                  </label>

                  <label class="checkbox-inline">
                    <input type="checkbox" name="price-cottages[kdn]" value="1" {{column.kdn}}> Кадастровый номер(ГКН)
                  </label>

                  <label class="checkbox-inline">
                    <input type="checkbox" name="price-cottages[note]" value="1" {{column.note}}> Примечание
                  </label>

                  <label class="checkbox-inline">
                    <input type="checkbox" name="price-cottages[agent]" value="1" {{column.agent}}> Телефоны агенства, риэлтора
                  </label>

                  <label class="checkbox-inline">
                    <input type="checkbox" name="price-cottages[photo]" value="1" {{column.photo}}> Фото
                  </label>

                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                  <button type="submit" class="btn btn-primary" name="price-cottages[button]" value="1">Сохранить изменения</button>
                </div>

              </form>
            </div><!-- /.form-group -->

          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div><!-- /.modal -->

      {{#if flash}}
        <div class="alert alert-dismissible alert-{{flash.type}}">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <strong>{{flash.intro}}</strong> {{{flash.message}}}
        </div>
      {{/if}}

      {{#if yesPage}}

        <fieldset class="the-fieldset">
          <legend class="the-legend">Сортировка</legend>

          <form class="form-horizontal" action="" method="get">

            <div class="col-sm-12 form-group-sm">

              <div class="col-sm-3">
                <select class="form-control" name="type">
                  {{{sortingType}}}
                </select>
              </div>

              <div class="col-sm-3">
                <select class="form-control" name="sections">
                  {{{sortingSection}}}
                </select>
              </div>

              <div class="col-sm-3">
                <select class="form-control" name="city">
                  {{{sortingCity}}}
                </select>
              </div>

              <div class="col-sm-3">
                <select class="form-control" name="street">
                  {{{sortingStreet}}}
                </select>
              </div>

            </div>


            <div class="col-sm-12 form-group-sm">

              <div class="col-sm-3">
                <select class="form-control" name="agent">
                  {{{sortingAgent}}}
                </select>
              </div>

              <div class="col-sm-2">
                <input type="text" class="form-control" name="min" placeholder="От {{sortingMinPrice}}" value="{{minPrice}}">
              </div>

              <div class="col-sm-2">
                <input type="text" class="form-control" name="max" placeholder="До {{sortingMaxPrice}}" value="{{maxPrice}}">
              </div>

              <div class="col-sm-3">
                <button type="submit" class="btn btn-primary">Сортировать</button>
                <a href="{{{back}}}" class="btn btn-warning btn-margins" role="button"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span></a>
              </div>

            </div>
          </form>
        </fieldset>


        {{{table}}}
      {{/if}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      {{>template/sidebarPrice}}
    </div>
  </div>
</div>