<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      {{>template/sidebar}}
    </div>
    <div class="col-md-10">
      <h1>{{{title}}}</h1>
      {{#if flash}}
        <div class="alert alert-dismissible alert-{{flash.type}}">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <strong>{{flash.intro}}</strong> {{{flash.message}}}
        </div>
      {{/if}}
    </div>
    {{#if yesPage}}
      <div class="col-md-10">
        <div class="form-group">

          <fieldset class="the-fieldset first">
            {{#if action.create}}
              <legend class="the-legend">Добавить подборку объектов</legend>{{/if}}
            {{#if action.edit}}
              <legend class="the-legend">Править подборку объектов</legend>{{/if}}
            {{#if action.drop}}
              <legend class="the-legend">Удалить подборку объектов</legend>{{/if}}
            <form class="form-horizontal admin" action="" method="post">
              <input type="hidden" id="csrf" name="_csrf" value="{{_csrfToken}}">

              <div class="clearfix"></div>
              <div class="form-group-sm">
                <label class="col-sm-3 control-label">Не показывать цену:</label>
                <div class="col-sm-4">
                  <input class="checkbox" type="checkbox" name="{{template}}[no_price]" value="1" {{#if formValue.no_price}}checked{{/if}}>
                </div>
              </div>

              <div class="clearfix"></div>
              <div class="form-group-sm">
                <label class="col-sm-3 control-label">Не показывать координаты продавца:</label>
                  <div class="col-sm-4">
                    <input class="checkbox" type="checkbox" name="{{template}}[no_agency]" value="1" {{#if formValue.no_agency}}checked{{/if}}>
                  </div>
              </div>

              <div class="clearfix"></div>
              <div class="form-group-sm{{#if repeatData.errNote_my}} has-error{{/if}}">
                <label class="col-sm-3 control-label">Примечание для себя:</label>
                <div class="col-sm-4">
                  <textarea cols="30" rows="3" name="{{template}}[note_my]" class="form-control">{{{formValue.note_my}}}{{#if
                    repeatData}}{{repeatData.note_my}}{{/if}}</textarea>
                </div>
              </div>

              <div class="clearfix"></div>
              <div class="form-group-sm{{#if repeatData.errNote_client}} has-error{{/if}}">
                <label class="col-sm-3 control-label">Примечание для клиента:</label>
                <div class="col-sm-4">
                  <textarea cols="30" rows="3" name="{{template}}[note_client]" class="form-control">{{{formValue.note_client}}}{{#if
                    repeatData}}{{repeatData.note_client}}{{/if}}</textarea>
                </div>
              </div>


              <div class="clearfix"></div>
              <div class="form-group-sm">
                <div class="col-sm-offset-3 col-sm-4">
                  {{#if action.create}}
                    <button type="submit" class="btn btn-success" name="{{template}}[create]" value="Сохранить">Сохранить</button>
                    <a href="{{{back}}}" class="btn btn-warning btn-success" role="button">Очистить форму</a>
                  {{/if}}
                  {{#if action.edit}}
                    <button type="submit" class="btn btn-primary" name="{{template}}[edit]" value="Править">Править</button>
                    <a href="{{{back}}}" class="btn btn-success btn-margins" role="button">Выйти из правки</a>
                  {{/if}}
                  {{#if action.drop}}
                    <button type="submit" class="btn btn-danger" name="{{template}}[drop]" value="Удалить">Удалить</button>
                    <a href="{{{back}}}" class="btn btn-success btn-margins" role="button">Выйти из удаления</a>
                  {{/if}}
                </div>
              </div>

            </form>
          </fieldset>
        </div>




        {{{table}}}

      </div>
    {{/if}}
  </div>
</div>