<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      {{>administrator/sidebar}}
    </div>
    <div class="col-md-10">
      <h1>{{title}}</h1>
      {{#if flash}}
        <div class="alert alert-dismissible alert-{{flash.type}}">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <strong>{{flash.intro}}</strong> {{{flash.message}}}
        </div>
      {{/if}}
      <div class="form-group">
        <fieldset class="the-fieldset first">
          <legend class="the-legend">Создание роли</legend>
          <form class="form-horizontal admin" action="" method="post">
            <input type="hidden" name="_csrf" value="{{_csrfToken}}">
            <div class="form-group-sm">
              <label for="inputText3" class="col-sm-4 control-label"> Название роли:</label>
              <div class="col-sm-4">
                <input type="text" class="form-control" name="administrator[nameRole]" id="inputText3" placeholder="">
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group-sm">
              <label for="inputText3" class="col-sm-4  control-label">Статус роли:</label>
              <div class="col-sm-4">
                <select class="form-control" name="administrator[users]">
                  <option value="">модератор</option>
                  <option value="1">пользователь после регистрации</option>
                </select>
              </div>
              <span class="help-block">Для вновь зарегистрированных пользователей создаётся одна роль, модератор по умолчанию.</span>
            </div>
            <div class="clearfix"></div>
            <div class="form-group-sm">
              <label for="inputText3" class="col-sm-4  control-label">Оплата прайса:</label>
              <div class="col-sm-4">
                <select class="form-control" name="administrator[payment_price]">
                  <option value="null" selected>по умолчанию</option>
                  <option value="1">оплатил прайс</option>
                  <option value="2">не оплатил прайс</option>
                </select>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group-sm">
              <div class="col-sm-offset-4 col-sm-4">
                <button type="submit" class="btn btn-success btn-margin" name="administrator[createRole]" value="Сохранить">Сохранить</button>
              </div>
            </div>
          </form>
        </fieldset>
      </div>
      {{{tableRole}}}
    </div>
  </div>
</div>