<div class="container-fluid">
	<div class="row">
		<div class="col-md-2">
			{{>administrator/sidebar}}
		</div>
		<div class="col-md-10">
			<h1>{{title}}</h1>
			{{#if flash}}
				<div class="alert alert-dismissible alert-{{flash.type}}">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<strong>{{flash.intro}}</strong> {{{flash.message}}}
				</div>
			{{/if}}
			<div class="form-group">
				<fieldset class="the-fieldset first">
					<legend class="the-legend">Редактировать записи в блокноте запросов</legend>
					<form class="form-horizontal admin" action="" method="post">
						<input type="hidden" name="_csrf" value="{{_csrfToken}}">
						<div class="form-group-sm">
							<label for="inputText3" class="col-sm-4 control-label"> Теги через запятую:</label>
							<div class="col-sm-4">
								<input type="text" class="form-control" name="sql[tags]" id="inputText3" placeholder=""
								       value="{{{formEditQuery.tags}}}">
							</div>
						</div>
						<div class="clearfix"></div>
						<div class="form-group-sm">
							<label for="inputText3" class="col-sm-4 control-label"> Описание запроса:</label>
							<div class="col-sm-4">
								<textarea name="sql[description]" class="form-control" rows="4">{{{formEditQuery
								.description}}}</textarea>
							</div>
						</div>
						<div class="clearfix"></div>
						<div class="form-group-sm">
							<label for="inputText3" class="col-sm-4 control-label"> Приоритет:</label>
							<div class="col-sm-4">
								<input type="text" class="form-control" name="sql[priority]" id="inputText3" placeholder=""
								       value="{{{formEditQuery.priority}}}">
							</div>
						</div>
						<div class="form-group-sm">
							<div class="col-sm-offset-4 col-sm-4">
								<button type="submit" class="btn btn-primary" name="sql[editQuery]" value="Править">Править</button>
								<a href="/admin/administrator/sql" class="btn btn-warning btn-margins" role="button">Закрыть форму</a>
							</div>
						</div>
					</form>
				</fieldset>
				{{{tableEditQuery}}}
			</div>
		</div>
	</div>
</div>