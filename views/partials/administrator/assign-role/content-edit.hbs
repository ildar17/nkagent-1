<div class="container-fluid">
	<div class="row">
		<div class="col-md-2">
			{{>administrator/sidebar}}
		</div>
		<div class="col-md-10">
			<h1>{{title}}</h1>
			{{#if flash}}
				<div class="alert alert-dismissible alert-{{flash.type}}">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<strong>{{flash.intro}}</strong> {{{flash.message}}}
				</div>
			{{/if}}


			<form class="form-horizontal admin" action="" method="post">
				<input type="hidden" name="_csrf" value="{{_csrfToken}}">
				{{{tableOneUser}}}
				<button type="submit" class="btn btn-primary" name="administrator[assignRole]" value="Сохранить настройки">Сохранить настройки</button> <a href="/admin/administrator/assign-role" class="btn btn-warning btn-margins" role="button">Закрыть форму</a>
			</form>

		</div>
	</div>
</div>