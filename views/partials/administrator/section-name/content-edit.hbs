<div class="container-fluid">
	<div class="row">
		<div class="col-md-2">
			{{>administrator/sidebar}}
		</div>
		<div class="col-md-10">
			<h1>{{title}}</h1>
			{{#if flash}}
				<div class="alert alert-dismissible alert-{{flash.type}}">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<strong>{{flash.intro}}</strong> {{{flash.message}}}
				</div>
			{{/if}}
			<div class="form-group">
				<fieldset class="the-fieldset first">
					<legend class="the-legend">Править название раздела</legend>
					<form class="form-horizontal admin" action="" method="post">
						<input type="hidden" name="_csrf" value="{{_csrfToken}}">
						<div class="form-group-sm">
							<label class="col-sm-4 control-label"> Справка по разделу:</label>
							<div class="col-sm-8">
								<p class="form-control-static">{{{reference}}}</p>
							</div>
						</div>
						<div class="clearfix"></div>

						<div class="form-group-sm">
							<label for="inputText3" class="col-sm-4 control-label"> Название раздела:</label>
							<div class="col-sm-4">
								<input type="text" class="form-control" name="administrator[name]" id="inputText3"
								       value="{{formNamePermit}}">
							</div>
						</div>
						<div class="clearfix"></div>
						<div class="form-group-sm">
							<label for="inputText3" class="col-sm-4 control-label"> Приоритет:</label>
							<div class="col-sm-2">
								<input type="text" class="form-control" name="administrator[priority]" id="inputText3"
								       value="{{priority}}">
							</div>
						</div>

						<div class="clearfix"></div>
						<div class="form-group-sm">
							<div class="col-sm-offset-4 col-sm-4">
								<button type="submit" class="btn btn-primary" name="administrator[addName]" value="Править
								 название">Править название</button>
								<a href="/admin/administrator/section-name" class="btn btn-warning btn-margins"
								   role="button">Закрыть форму</a>
							</div>
						</div>
					</form>
				</fieldset>
			</div>
		</div>
	</div>
</div>