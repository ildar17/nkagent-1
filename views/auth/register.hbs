{{>home/header}}
{{>home/nav}}
<div class="container content">
{{#if flash}}
	<div class="alert alert-dismissible alert-{{flash.type}}">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<strong>{{flash.intro}}</strong> {{{flash.message}}}
	</div>
{{/if}}
  <h1 class="text-center">Регистрация</h1>
	<div class="auth col-xs-12 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2" style="margin-top: 10px";>
		<form class="form-horizontal" action="/admin/register" method="post">
			<input type="hidden" name="_csrf" value="{{_csrfToken}}">

       <div class="form-group{{#if repeatData.errEmail}} has-error{{/if}}">
				<label for="inputEmail3" class="col-sm-5 control-label">Почтовый ящик</label>
				<div class="col-sm-7">
					<input type="email" name="user[email]" class="form-control" id="inputEmail3" placeholder="Электроннная почта" {{#if repeatData}}value="{{repeatData.email}}"{{/if}}>
				</div>
			</div>
			<div class="form-group{{#if repeatData.errPass}} has-error{{/if}}">
				<label for="inputPassword3" class="col-sm-5 control-label">Пароль</label>
				<div class="col-sm-7">
					<input type="password" name="user[pass]" class="form-control" id="inputPassword3" placeholder="Не менеe 4-х символов. Наличие цифр и англ. букв." {{#if repeatData}}value="{{repeatData.pass}}"{{/if}}>
				</div>
			</div>
			<div class="form-group{{#if repeatData.errSum}} has-error{{/if}}">
				<label for="inputPassword3" class="col-sm-5 control-label">Сумма двух чисел</label>
				<div class="col-sm-3">
					<input type="text" name="user[captcha]" class="form-control">
				</div><p>{{{total}}}</p>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-5 col-sm-7">
					<button type="submit" class="btn btn-primary btn-margin">Зарегистрироваться</button>
          <a style="margin-left: 15px" href="/admin/register" class="btn btn-warning btn-margins" role="button"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span></a>
				</div>
			</div>
		</form>
	</div><!--/.auth-->
</div><!--/.container-->
{{>home/sidebar}}
{{>home/footer}}
